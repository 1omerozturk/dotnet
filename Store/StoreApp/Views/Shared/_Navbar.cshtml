<style>
  .navbar {}

  li {
    font-size: larger;
    font-weight: 600;
  }
 .navbar-nav li:hover{
    opacity: .6;

  }
</style>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark gap-3">
  <div class="container mx-0">
    <a class="navbar-brand border border-2 rounded bg-gradient text-secondary fw-bold fs-4" href="/"><i class="fa-solid fa-store fa-2x text-secondary"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item border border-dark rounded">
          <a class="nav-link active" aria-current="page" href="/">
            <i class="fa fa-home" aria-hidden="true"></i>
            Home</a>
        </li>
        <li class="nav-item border border-dark">
          <a class="nav-link text-primary" href="/Product">
            <i class="fa fa-table" aria-hidden="true"></i>
            Products -
            <span class="border rounded-circle px-1 border-danger bg-gradient bg-light text-dark">
            @await Component.InvokeAsync("ProductSummary")
            </span>
            </a>
        </li>
        <li class="nav-item border rounded border-dark">
          <a class="nav-link text-warning" href="/Category">
            <i class="fa fa-braille" aria-hidden="true"></i>
            Categories</a>
        </li>
        <li class="nav-item border rounded border-dark">
          <a class="nav-link text-success" aria-current="page" asp-page="/Contact">
            <i class="fa fa-commenting" aria-hidden="true"></i>
            Contact</a>
        </li>
        @* </ul>
        <ul class="navbar-nav"> *@
        @if ((await Component.InvokeAsync("CartSummary")).Equals("0"))
        {

          <li class="nav-item border rounded text-light border-dark">
            <a class="nav-link text-info" aria-current="page" asp-area="" asp-page="/Cart"><i
                class="fa fa-spinner fa-fw fa-shopping-cart"></i>
              Cart</a>
          </li>
        }
        else
        {
          <li class="nav-item border rounded text-light border-dark">
            <a class="nav-link text-info" aria-current="page" asp-area="" asp-page="/Cart"><i
                class="fa fa-spinner fa-fw fa-shopping-cart"></i>
              Cart - <span class="border border-danger bg-gradient bg-light text-dark rounded-circle px-1 ">@await Component.InvokeAsync("CartSummary")
              </span> 
              </a>
          </li>
        }


        <li class="nav-item border rounded text-light border-dark">
          <a class="nav-link text-info" aria-current="page" asp-area="" asp-page="/demo"> <i
              class="fas fa-calendar-times fa-xs fa-fw"></i>Demo</a>
        </li>
        <partial name="_LoginMenu"/>
      </ul>

    </div>
  </div>
</nav>
