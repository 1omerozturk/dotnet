<div class="my-3">
    <h6 class="lead text-light"> 
        <i class="fas fa-filter text-warning"></i>
        Filters
    </h6>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])"/>

        <div class="form-group my-2 d-flex">
            <input class="form-control flex-1" name="SearchTerm" placeholder="Search"> 
            </input>
        </div>
        <div class="form-group my-2 d-flex">
            <input class="form-control flex-1" name="MinPrice" placeholder="Min. Price"> 
            </input>
        </div>
        <div class="form-group my-2 d-flex">
            <input class="form-control flex-1" name="MaxPrice" placeholder="Max. Price"> 
            </input>
        </div>
        <div class="text-center">
 <button type="submit" class="btn btn-primary btn-sm mx-auto">Filter</button>
        </div>
    </form>
</div>