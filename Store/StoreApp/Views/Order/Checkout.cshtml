@model Order
@{
    Layout = "_Layout";
}


<div class="container-lg bg-light bg-gradient py-2 text-cetner mx-auto">
    <div class="text-center">
    <h3 class="text-center bg-gradient bg-light border border-2 rounded p-1 border-dark d-inline-block">Checkout</h3>
    </div>
    <div class="text-danger" asp-validation-summary="All">

    </div>
    <form method="post" asp-action="Checkout">
            <div class="form-group my-3"> <input type="text" asp-for="Name" class="form-control w-50 mx-auto" placeholder="Name" />
            </div>
            <div class="form-group my-3">
                <input type="text" asp-for="Line1" class="form-control w-50 mx-auto" placeholder="Line1" />
            </div>

            <div class="form-group text-center my-3"> 
                <input type="text" asp-for="Line2" class="form-control w-50 mx-auto" placeholder="Line2" />
            </div>

            <div class="form-group my-3"> 
                <input type="text" asp-for="Line3" class="form-control w-50 mx-auto" placeholder="Line3" />
            </div>
            <div class="form-group my-3"> 
                <input type="text" asp-for="City" class="form-control w-50 mx-auto" placeholder="City" />
            </div>

            <div class="form-group my-3 w-50 mx-auto">
                <input asp-for="GiftWrap">
                <label class="text-dark fw-bold">Gift wrap these items.</label>
            </div>
            <div class="text-center">
                <button class="btn btn-outline-dark my-2" type="submit">
                    Complete Order
                </button>
            </div>
    </form>
</div>
