<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

    <style>
        .navbar-nav .nav-item li {
            display: inline-block;
            background-color: lightblue;
            color: rgb(255, 255, 255);
            border: 2px solid white;
            margin-right: 2px;
            margin-left: 2px;
            border-radius: 30%;
        }

        .navbar-nav .nav-item a {
            display: inline-block;
            border-radius: 25%;
            color: rgb(255, 255, 255);
            font-weight: 500;
            font-family: cursive;
        }

        .navbar-nav .nav-item a:hover {
            border-radius: 25%;
            opacity: .8;
            background-color: rgb(255, 255, 255);
            color: rgb(0, 0, 0);
        }
    </style>
</head>

<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Dashboard"
                            asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item text-white">
                        <a class="nav-link" aria-current="page" asp-controller="Product" asp-action="Index">Products
                            (@await Component.InvokeAsync("ProductSummary"))</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" aria-current="page" asp-controller="Category" asp-action="Index">Categories
                            (@await Component.InvokeAsync("CategorySummary"))</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" aria-current="page" asp-controller="Order" asp-action="Index">Orders</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" aria-current="page" asp-controller="Role" asp-action="Index">Roles</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" aria-current="page" asp-controller="User" asp-action="Index">Users</a>
                    </li>
                </ul>
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-area="" target="_blank" asp-controller="Home"
                            asp-action="Index">Home</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>

</body>

</html>
