@model IEnumerable<Category>
<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>


 @{
    Layout="_Layout";
    }




       <div class="container mt-3 bg-info border border-2">    
    <div class="text-center">
          <div class="display-6 my-4 fw-bolder">
      Categories
     </div>
     <div class="d-flex justify-content-end mb-3"><a class="btn btn-success" asp-action="Create">
      <i class="fa-solid fa-plus"></i>
      Create
     </a>
     </div>
     <table class="table table-info table-hover table-xl  mx-auto">
      <thead>
        <tr class="fs-4">

        <th>Id</th>
        <th>Category Name</th>
        @* <th>Price</th>
        <th>Operations</th> *@
        </tr>
      </thead>
      <tbody>
  @foreach(var cat in Model){
        <tr>
          <td class="fw-bold">@cat.CategoryId</td>
          <td class="fw-bold">
            <div class="btn-group gap-2">
            <div class="">
            @cat.CategoryName
            </div>
            <button class="disabled">
            <i class="fa fa-@cat.CategoryName.ToLower()"></i>
            </button>
            </div>
            </td>
         
          @* <td class="fw-bold"><div class="btn-group gap-3 justify-content-between">
            <a target="_blank" asp-route-id="@cat.ProductId" asp-action="Get" asp-controller="Product">
            <button class="btn btn-outline-info"> <i class="fa fa-search"></i> View</button></a>

            <a asp-action="Update" asp-route-id="@cat.ProductId">
            <button class="btn btn-outline-warning"> <i class="fa fa-edit"></i> Update</button></a>

            <a asp-action="Delete" asp-route-id="@cat.ProductId">
            <button class="btn btn-outline-danger"> <i class="fa fa-delete"></i> Delete</button></a>
            
          </div></td> *@
        </tr>
      }
      </tbody>
     </table>
    </div>
    </div>






    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>