@model ResetPasswordDto

<style>
    label {
        font-weight: bold;
        display: flex;
        justify-content: center;
        justify-items: center;
    }
</style>

@{
    Layout = "_Layout";
}
<div class="bg-secondary w-75 mx-auto px-5 my-2 rounded-5">

    <div class="text-center">
        <div class="display-6 text-light fw-bold">
            Reset Password
            <i>(@Model?.UserName)</i>
        </div>
    </div>

    <div class="text-danger bg-light mx-auto text-center" asp-validation-summary="All"></div>

    <form method="post" asp-action="ResetPassword">
        <input type="hidden" asp-for="UserName" />
        <div class="form-group my-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>

        <div class="form-group my-3">
            <label asp-for="ConfirmPassword"> Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>

        <div class="btn-group gap-5 my-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-info my-2 rounded-4">
                <i class="fas fa-key"></i>
                Update</button>
            <a class="btn btn-outline-dark my-2 rounded-4" asp-action="Index">
                <i class="fas fa-user-friends"></i>
                Users</a>
        </div>
    </form>
</div>