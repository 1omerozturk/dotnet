@model IEnumerable<IdentityUser>
@{
    Layout = "_Layout";
}
<div class="bg-secondary m-3 mt-3 border border-3 rounded-5 border-dark">

    <div class="text-center">
        <div class="display-6 fw-bold">
            Users
        </div>
    </div>
    <div class="d-flex m-2 justify-content-end">
        <a asp-action="Create" class="btn btn-outline-light">
            <i class="fas fa-user-secret    ">
            </i>
            <i class="fa fa-plus" aria-hidden="true">
            </i>
            Add User
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Roles</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (IdentityUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td user-name="@user.UserName" user-role="">

                    </td>
                    <td>
                        <div class="btn-group border border-top-0 border-bottom-0  p-1 border-2 border-secondary rounded-1 gap-2">
                            <a data-toggle="tooltip" data-placement="top" title="Edit"
                            class="btn btn-md btn-outline-warning rounded-3" asp-action="Update"
                                asp-route-id="@user.UserName">
                                <i class="fas fa-user-edit"></i></a>
                            <a data-toggle="tooltip" data-placement="top" title="Reset Password" class="btn btn-md btn-outline-info rounded-3" asp-action="ResetPassword"
                                asp-route-id="@user.UserName">
                                <i class="fas fa-key"></i></a>
                            <form method="post" asp-action="DeleteOneUser">
                                <input type="hidden" name="UserName" value="@user.UserName" />
                                <button data-toggle="tooltip" data-placement="top" title="Delete" type="submit" class="btn btn-md btn-outline-danger rounded-3">
                                    <i class="fa fa-trash" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts 
{
    <script>

    $(document).ready(()=>{
        $('[data-toggle="tooltip"]').tooltip()
    });
    </script>
}