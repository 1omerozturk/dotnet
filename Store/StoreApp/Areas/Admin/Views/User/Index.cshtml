@model IEnumerable<IdentityUser>
@{
    Layout="_Layout";
}
<div class="bg-secondary m-3 mt-3 border border-3 rounded-5 border-dark">

<div class="text-center">
    <div class="display-6 fw-bold">
        Users
    </div>
</div>
<div class="d-flex m-2 justify-content-end">
    <a asp-action="Create" class="btn btn-outline-light">
        <i class="fas fa-user-secret    ">
        </i>
        <i class="fa fa-plus" aria-hidden="true">
        </i>
        Add User
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td user-name="@user.UserName" user-role="">

                </td>
                <td>
                    <div class="btn-group gap-2">
                        <a class="btn btn-sm btn-outline-warning rounded-3" asp-action="Update" asp-route-id="@user.UserName">
                            <i class="fas fa-user-edit"></i>
                            Edit</a>
                        <a class="btn btn-sm btn-outline-info rounded-3" asp-action="ResetPassword" asp-route-id="@user.UserName">
                        <i class="fas fa-key"></i>
                            Reset Password</a>
                        <form method="post" 
                        asp-action="DeleteOneUser">
                        <input type="hidden" name="UserName" value="@user.UserName"/>
                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-3">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                            Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>