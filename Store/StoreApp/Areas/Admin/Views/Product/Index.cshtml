@model IEnumerable<Product>


<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  
 @{
    Layout="_Layout";
    }

  <body>
    <div class="container bg-light border border-2">    
    <div class="text-center">
     <div class="display-6 my-4 fw-bolder">
      Products
     </div>
     <div class="d-flex justify-content-end mb-3"><a class="btn btn-success" asp-action="Create">
      <i class="fa-solid fa-plus"></i>
      Create
     </a>
     </div>
     <table class="table table-dark table-hover table-xl  mx-auto">
      <thead>
        <tr class="fs-4">

        <th>Id</th>
        <th>Image</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Operations</th>
        </tr>
      </thead>
      <tbody>
  @foreach(var prd in Model){
        <tr>
          <td class="fw-bold">@prd.ProductId</td>
          <td>
              <img class="border border-light rounded" src="@prd.ImageUrl" alt="" height="75" width="50%">
          </td>
          <td class="fw-bold">
             <div class="btn-group gap-4 justify-content-end">
            <div class="fs-5 fw-bold">
            @prd.ProductName
            </div>
            </div>
             </td>
          <td class="fw-bold">@prd.Price.ToString("c")</td>
          <td class="fw-bold"><div class="btn-group gap-3 justify-content-between">
            <a target="_blank" asp-route-id="@prd.ProductId" asp-action="Get" asp-controller="Product">
            <button class="btn btn-outline-info"> <i class="fa fa-search"></i> View</button></a>

            <a asp-action="Update" asp-route-id="@prd.ProductId">
            <button class="btn btn-outline-warning"> <i class="fa fa-edit"></i> Update</button></a>

            <a asp-action="Delete" asp-route-id="@prd.ProductId">
            <button class="btn btn-outline-danger"> <i class="fa fa-remove"></i> Delete</button></a>
            
          </div></td>
        </tr>
      }
      </tbody>
     </table>
    </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>


