@model Candidate

<div>
<h3 class="display-4">Congratulations @Model.Fullname </h3>
<p class="lead">Your application has been <mark class="text-primary">accepted</mark></p>
<p class="lead">Many thanks for your interest .< /p>
<hr />
<blockquote class="blockquote">
You have enrolled to @Model.SelectedCourse course.
</blockquote>
<p class="text-muted">You applied at @Model.ApplyAt .< /p>

<div class="btn-group">
<a class="btn btn-outline-danger" asp-action="Index">Applications</a>
<a class="btn btn-outline-success" asp-action="Index" asp-controller="Home">Home</a>
</div>
</div>